			}
			code{
				font-family:monospace;
			}
			pre{
				white-space:pre-wrap;
				background:#e9e9e9;
				padding:1em;
				border-radius:.5em;
			}

			::selection{
				background:rgba(255,252,127,.8);
			}
			::-moz-selection{
				background:rgba(255,252,127,.8);
